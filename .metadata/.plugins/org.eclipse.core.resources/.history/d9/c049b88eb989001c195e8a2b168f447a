package eleventh;

import java.util.Scanner;

public class P247Q01 
{

	public static void main(String[] args) 
	{
		int a,b,c;
		float sum,avg;
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter first no.:	");
		a=sc.nextInt();
		System.out.println("Enter second no.:	");
		b=sc.nextInt();
		System.out.println("Enter third no.:	");
		c=sc.nextInt();
		sum=(float)(a+b+c);
		avg=(float)(sum/3.0);
		System.out.println("Sum of given three no.:	"+sum);
		System.out.println("Average of given three no.: "+avg);


	}

}
